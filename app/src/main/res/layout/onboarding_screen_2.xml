<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    android:transitionName="content">
    <ImageView
        android:id="@+id/shared_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_gradient"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingTop="32dp"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@id/btn_skip"
        app:layout_constraintBottom_toTopOf="@id/progress_container"
        app:layout_constraintVertical_bias="0.2">

        <!-- Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="Nourish Your Mind and Body"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:alpha="0.9"
            android:gravity="center"
            android:text="Track nutrition and practice mindfulness for holistic wellness"
            android:textColor="@android:color/white"
            android:textSize="22sp" />

        <!-- Description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:alpha="0.9"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:text="Monitor your meals, practice meditation, and develop healthy habits for a balanced lifestyle."
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Features Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal">

            <!-- Nutrition Tracking -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/feature_card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="ðŸŽ"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="63dp"
                    android:layout_height="46dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Nutrition Tracking"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Meditation -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/feature_card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="ðŸ§˜"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Meditation"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>

            <!-- Meal Planning -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="1"
                android:background="@drawable/feature_card_background"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:text="ðŸ“…"
                    android:textSize="36sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:text="Meal Planning"
                    android:textColor="@android:color/white"
                    android:textSize="10sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Indicators -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/fab_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_inactive" />

        <View
            android:layout_width="64dp"
            android:layout_height="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_active" />

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:background="@drawable/progress_inactive" />
    </LinearLayout>

    <!-- Next Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Next"
        app:srcCompat="@drawable/ic_arrow_forward"
        app:tint="#1976D2"
        app:backgroundTint="@android:color/white"
        app:elevation="12dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>