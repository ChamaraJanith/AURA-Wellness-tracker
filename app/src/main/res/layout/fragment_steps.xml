<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/onboarding_gradient"
    android:fillViewport="true"
    android:scrollbars="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Status Bar Spacer -->
        <View
            android:id="@+id/status_bar_spacer"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/status_bar_spacer">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_steps"
                app:tint="@color/white"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Step Counter"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/iv_sensor_status"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_sensor_active"
                app:tint="@color/green_accent"
                android:visibility="visible" />

        </LinearLayout>

        <!-- Main Step Counter Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_main_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="12dp"
            app:cardBackgroundColor="@color/card_background"
            app:layout_constraintTop_toBottomOf="@id/header_section">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Circular Progress Container -->
                <FrameLayout
                    android:id="@+id/progress_container"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <!-- Background Circle -->
                    <ProgressBar
                        android:id="@+id/progress_background"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="100"
                        android:progress="100"
                        android:progressDrawable="@drawable/circular_progress_background"
                        android:rotation="-90" />

                    <!-- Main Progress Circle -->
                    <ProgressBar
                        android:id="@+id/progress_steps"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:max="10000"
                        android:progress="0"
                        android:progressDrawable="@drawable/circular_progress_foreground"
                        android:rotation="-90" />

                    <!-- Center Content -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:gravity="center">

                        <!-- Step Count -->
                        <TextView
                            android:id="@+id/text_step_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="36sp"
                            android:textStyle="bold"
                            android:textColor="@color/background_light"/>

                        <!-- Steps Label -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="steps"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text"/>

                        <!-- Progress Percentage -->
                        <TextView
                            android:id="@+id/text_progress_percentage"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="12sp"
                            android:textColor="@color/accent_color"
                            android:layout_marginTop="4dp"/>

                    </LinearLayout>

                </FrameLayout>

                <!-- Goal Text -->
                <TextView
                    android:id="@+id/text_goal_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goal: 10,000 steps"
                    android:textSize="16sp"
                    android:textColor="@color/secondary_text"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/progress_container"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Real-time Status -->
                <LinearLayout
                    android:id="@+id/realtime_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/text_goal_info"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <View
                        android:id="@+id/status_indicator"
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:background="@drawable/status_indicator_active"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/text_realtime_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Real-time counting active"
                        android:textSize="12sp"
                        android:textColor="@color/green_accent"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Statistics Row -->
        <LinearLayout
            android:id="@+id/stats_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/card_main_counter">

            <!-- Today's Distance Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_distance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.0 km"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distance"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_text"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Calories Burned Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/card_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/text_calories"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0 cal"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_text" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Calories"
                        android:textSize="12sp"
                        android:textColor="@color/secondary_text"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- SCROLLABLE BUTTON SECTION -->
        <LinearLayout
            android:id="@+id/button_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/stats_row">

            <!-- Action Buttons Row 1 -->
            <LinearLayout
                android:id="@+id/button_row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Add Steps Button -->
                <Button
                    android:id="@+id/button_add_steps"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Add Steps"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_primary"
                    android:elevation="6dp" />

                <!-- Set Goal Button -->
                <Button
                    android:id="@+id/button_set_goal"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Set Goal"
                    android:textColor="@color/primary_color"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/button_secondary"
                    android:elevation="6dp" />

            </LinearLayout>

            <!-- Reset Button (Row 2) -->
            <Button
                android:id="@+id/button_reset"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="16dp"
                android:text="Reset Today's Steps"
                android:textColor="@color/error_color"
                android:textSize="14sp"
                android:textStyle="bold"
                android:background="@drawable/button_danger"
                android:elevation="4dp" />

            <!-- Achievement Banner -->
            <androidx.cardview.widget.CardView
                android:id="@+id/achievement_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:cardCornerRadius="12dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@color/achievement_background">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_trophy"
                        app:tint="@color/achievement_gold"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŽ‰ Goal Achieved!"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/achievement_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Congratulations on reaching your daily goal!"
                            android:textSize="12sp"
                            android:textColor="@color/achievement_text_secondary" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Bottom Padding for Scroll -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
