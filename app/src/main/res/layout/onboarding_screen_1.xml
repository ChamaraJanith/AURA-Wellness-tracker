<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_gradient"
    android:transitionName="content">
    <ImageView
        android:id="@+id/shared_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/splash_gradient"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Skip Button -->
    <TextView
        android:id="@+id/btn_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:padding="12dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main Content Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="32dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_skip"
        app:layout_constraintBottom_toTopOf="@id/progress_container"
        app:layout_constraintVertical_bias="0.4">

        <!-- Logo Container -->
        <androidx.cardview.widget.CardView
            android:id="@+id/logo_card"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginBottom="32dp"
            app:cardCornerRadius="70dp"
            app:cardElevation="20dp"
            app:cardBackgroundColor="#B3FFFFFF">

            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:contentDescription="AURA Logo"
                android:scaleType="centerInside"
                android:src="@drawable/ic_wellness_logo" />
        </androidx.cardview.widget.CardView>

        <!-- Welcome Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to AURA"
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:layout_marginBottom="12dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your Personal Wellness Journey"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:alpha="0.9" />

        <!-- Feature Cards -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="40dp"
            android:baselineAligned="false">

            <!-- Habit Tracking Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/feature_card_background">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_habit_tracking"
                    android:contentDescription="Habit Tracking Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Habit Tracking"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Mood Journal Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/feature_card_background">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="12dp"
                    android:src="@drawable/ic_mood_journal"
                    android:contentDescription="Mood Journal Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mood Journal"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>

            <!-- Hydration Card -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="16dp"
                android:layout_marginHorizontal="8dp"
                android:background="@drawable/feature_card_background">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginBottom="29dp"
                    android:src="@drawable/ic_hydration"
                    android:contentDescription="Hydration Reminder Icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hydration"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Progress Indicators -->
    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="32dp"
        android:gravity="center"
        app:layout_constraintBottom_toTopOf="@id/fab_next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="64dp"
            android:layout_height="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_active" />

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progress_inactive" />

        <View
            android:layout_width="24dp"
            android:layout_height="4dp"
            android:background="@drawable/progress_inactive" />
    </LinearLayout>

    <!-- Next Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:contentDescription="Next"
        app:srcCompat="@drawable/ic_arrow_forward"
        app:tint="#1976D2"
        app:backgroundTint="@android:color/white"
        app:elevation="12dp"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>