<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/splash_gradient">

    <androidx.cardview.widget.CardView
        android:id="@+id/progress_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@android:color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Today's Progress"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#1A1C1E"
                android:layout_marginBottom="12dp" />

            <TextView
                android:id="@+id/text_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0 of 0 habits completed today"
                android:textSize="16sp"
                android:textColor="#43474E"
                android:gravity="center"
                android:layout_marginBottom="12dp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:max="100"
                android:progress="0"
                android:progressTint="#1976D2"
                android:progressBackgroundTint="#E0E0E0" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:id="@+id/quick_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/progress_card"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:weightSum="2">

        <Button
            android:id="@+id/button_quick_add"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Quick Add"
            android:backgroundTint="@color/cardview_light_background"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/button_view_analytics"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="Analytics"
            android:backgroundTint="#E3F2FD"
            android:textColor="#1976D2" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/section_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/quick_actions"
        android:orientation="horizontal"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Your Habits"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/background_light" />

        <Button
            android:id="@+id/button_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sort"
            android:background="?attr/selectableItemBackground"
            android:textColor="@color/background_light"
            android:textAllCaps="false" />

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_habits"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/section_header"
        android:layout_above="@+id/fab_placeholder"
        android:scrollbars="vertical" />
    <LinearLayout
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/section_header"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="âœ“"
            android:textSize="80sp"
            android:textColor="#E0E0E0"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No habits yet"
            android:textSize="18sp"
            android:textColor="#757575"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap the + button to add your first habit"
            android:textSize="14sp"
            android:textColor="#9E9E9E"
            android:gravity="center" />

    </LinearLayout>
    <View
        android:id="@+id/fab_placeholder"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_habit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:src="@drawable/ic_add"
        app:tint="#1976D2"
        app:backgroundTint="@android:color/white" />

</RelativeLayout>
