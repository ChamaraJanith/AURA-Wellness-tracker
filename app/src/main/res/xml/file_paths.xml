<?xml version="1.0" encoding="utf-8"?>
<paths xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Internal app files directory -->
    <files-path name="my_files" path="." />

    <!-- Internal app cache directory -->
    <cache-path name="my_cache" path="." />

    <!-- External storage -->
    <external-files-path name="my_images" path="Pictures" />
    <external-files-path name="my_docs" path="Documents" />

    <!-- External cache -->
    <external-cache-path name="my_external_cache" path="." />

    <!-- For sharing mood summaries and other files -->
    <files-path name="shared_files" path="shared/" />
</paths>
